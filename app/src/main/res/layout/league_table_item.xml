<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/textView_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="XX."
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView_team"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="2dp"
            android:layout_toEndOf="@+id/textView_position"/>

        <TextView
            android:id="@+id/textView_teamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView_team"
            android:text="Team name"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/textView_v"
            android:text="M"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:paddingEnd="15dp"/>

        <TextView
            android:id="@+id/textView_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/textView_e"
            android:text="V"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:paddingEnd="15dp"/>

        <TextView
            android:id="@+id/textView_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/textView_i"
            android:text="E"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:paddingEnd="15dp"/>

        <TextView
            android:id="@+id/textView_i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/textView_g"
            android:text="ÃŽ"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:paddingEnd="15dp"/>

        <TextView
            android:id="@+id/textView_g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/textView_p"
            android:text="G"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:paddingEnd="15dp"/>

        <TextView
            android:id="@+id/textView_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="P"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:paddingEnd="15dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>